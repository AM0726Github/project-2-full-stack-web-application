
const sequelize = require('../config/connection.js');
const { Model, DataTypes } = require('sequelize');

class Groups extends Model { };

Groups.init({
    id: {
        type: DataTypes.INTEGER,
        allowNull: false,
        autoIncrememt: true,
        primaryKey: true,
    },
    group_name: {
        type: DataTypes.STRING(30),
        allowNull: false,
    },
    user_id: {
        type: DataTypes.INTEGER,
        allowNull: false,
        references: {
            model: 'User',
            key: 'id'
        }
    },
    event_id: {
        type: DataTypes.INTEGER,
        allowNull: false,
        references: {
            model: 'Events',
            key: 'id'
        }
    }
})

module.exports = Groups;