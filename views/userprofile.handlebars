<!-- add edit feature-->
<div>
  <button class="btn waves-effect waves-light" type="submit" name="action">Edit
    my Profile
    <i class="material-icons right">{{edit-profile}}</i>
  </button>
</div>
<div class="row">
  <div class="col s12 m1">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <div class="row">
          <div>
            <span class="card-title">{{user.username}}</span>
            <p>Email : {{user.email}}</p>
            <p>Zip Code : {{user.zip}}</p>
            {{!-- <p>Dietary Pref : {{Diet}}</p> --}}
            <p>Interest :
              {{#each user.interests as |interest|}}
                <span>{{interest.name}}</span>
              {{/each}}
            </p>
          </div>
          <img
            src="/images/Profile-pic300x286.png"
            class="rounded mx-auto d-block"
            alt="Avatar"
          />
        </div>
      </div>
      <div class="card-action">
        <a class="m-1 waves-effect waves-light btn align-middle" href="#">Past
          events</a>
        <a
          class="m-1 waves-effect waves-light btn align-middle"
          href="#"
        >upcoming events</a>
        <a class="m-1 waves-effect waves-light btn align-middle" href="#">hosted
          events</a>
      </div>
    </div>
  </div>
</div>

