<div class="container">
  <div class="col s12 m1">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <div class="row">
          <div>
            <span class="card-title" id="user-username">{{user.username}}</span>
            <span id="user-id" data-user-id="{{user.id}}"></span>
            <div class="row">
              <div class="col s12">
                <div class="card">
                  <div class="card-content text-black">
                    <span class="card-title">Basic Info</span>
                    <p id="user-email">Email: {{user.email}}</p>
                    <p id="user-zip">Zip Code : {{user.zip}}</p>
                  </div>
                  <div class="card-action">
                    <button
                      class="btn waves-effect waves-light right modal-trigger"
                      data-target="edit-basic-info-modal"
                      type="submit"
                      id="edit-basic-info-button"
                    >Edit Basic Info
                      <i class="material-icons right"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col s12 m6">
                <div class="card">
                  <div class="card-content">
                    <span class="card-title text-black">Dietary Preferences</span>
                    <div>
                      {{#each user.dietary_preferences as |df|}}
                        <span
                          class="badge green text-white left"
                        >{{df.name}}</span>
                      {{/each}}
                    </div>
                  </div>
                  <div class="card-action">
                    <button class="btn right" id="edit-dietary-pref-button">Edit
                      Dietary Preferences</button>
                  </div>
                </div>
              </div>
              <div class="col s12 m6">
                <div class="card">
                  <div class="card-content">
                    <span class="card-title text-black">Interests</span>
                    <div>
                      {{#each user.interests as |interest|}}
                        <span
                          class="green badge left text-white"
                        >{{interest.name}}</span>
                      {{/each}}
                    </div>
                  </div>
                  <div class="card-action">
                    <button class="btn right" id="edit-interests-button">Edit
                      Interests</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="edit-basic-info-modal" class="modal modal-fixed-footer">
  <div class="modal-content">
    <h4>Edit Basic Info</h4>
    <form id="edit-basic-info-form">
      <div class="input-field">
        <label for="username">Username</label>
        <input type="text" id="edit-username" />
      </div>
      <div class="input-field">
        <label for="zip">Zip Code</label>
        <input type="text" id="edit-zip" />
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <a
      href="#!"
      class="modal-close waves-effect waves-green btn-flat"
    >Cancel</a>
    <a
      href="#!"
      id="save-edit-basic-info-button"
      class="waves-effect waves-green btn-flat"
    >Save</a>
  </div>
</div>

<script src="/javascript/profile.js"></script>
