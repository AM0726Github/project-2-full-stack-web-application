<div class="container">
  <div class="col s12 m1">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <div class="row">
          <div>
            <span class="card-title">{{user.username}}</span>
            <div class="row">
              <div class="col s12">
                <div class="card">
                  <div class="card-content text-black">
                    <span class="card-title">Basic Info</span>
                    <p>Email: {{user.email}}</p>
                    <p>Zip Code : {{user.zip}}</p>
                  </div>
                  <div class="card-action">
                    <button
                      class="btn waves-effect waves-light right"
                      type="submit"
                      id="edit-basic-info-button"
                    >Edit Basic Info
                      <i class="material-icons right"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col s12 m6">
                <div class="card">
                  <div class="card-content">
                    <span class="card-title text-black">Dietary Preferences</span>
                    <div>
                      {{#each user.dietary_preferences as |df|}}
                        <span
                          class="badge green text-white left"
                        >{{df.name}}</span>
                      {{/each}}
                    </div>
                  </div>
                  <div class="card-action">
                    <button class="btn right" id="edit-dietary-pref-button">Edit
                      Dietary Preferences</button>
                  </div>
                </div>
              </div>
              <div class="col s12 m6">
                <div class="card">
                  <div class="card-content">
                    <span class="card-title text-black">Interests</span>
                    <div>
                      {{#each user.interests as |interest|}}
                        <span
                          class="green badge left text-white"
                        >{{interest.name}}</span>
                      {{/each}}
                    </div>
                  </div>
                  <div class="card-action">
                    <button class="btn right" id="edit-interests-button">Edit
                      Interests</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

